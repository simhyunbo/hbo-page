<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shb.mapper.BoardMapper">
<!--  <select id="메소드이름" resultType="Blog"> -->
  <select id="getList" resultType="com.shb.domain.BoardVo">
<!--  부등호를 사용하기위해 쓴다 -->
  <![CDATA[
    SELECT rownum,
            board_no,
            title,
            content,
            nvl(count,0) as cnt,
            DECODE(open,'Y','공개','비공개') as isopen,
            to_char(wdate,'YYYY-MM-DD') as wdate,
            member_id
    FROM board
    order by wdate desc
   ]]> 
    
  </select>
  
 <resultMap id="boardMap" type="com.shb.domain.BoardVo" >
  	<result property="rownum" column="rownum" javaType="String" />
  	<result property="board_no" column="board_no" javaType="String" />
  	<result property="title" column="title" javaType="String" />
  	<result property="content" column="content" javaType="String" />
  	<result property="cnt" column="cnt" javaType="String" />
  	<result property="isopen" column="isopen" javaType="String" />
  	<result property="wdate" column="wdate" javaType="String" />
  	<result property="member_id" column="member_id" javaType="String" />
  </resultMap>
  
  <resultMap id="UploadFileMap" type="com.shb.dto.UploadFile" >
  	<result property="fileNo" column="file_No" javaType="String" />
  	<result property="fileName" column="fileName" javaType="String" />
  	<result property="saveFileName" column="saveFileName" javaType="String" />
  	<result property="fileSize" column="fileSize" javaType="String" />
  	<result property="fileType" column="fileType" javaType="String" />
  	<result property="filePath" column="filePath" javaType="String" />
  	<result property="boardNo" column="board_No" javaType="String" />
  </resultMap>
  
  
  <select id="getBoard" statementType="CALLABLE" parameterType="com.shb.domain.BoardFileVo">
  	{
  		CALL p_getBoard(
  						#{bno, mode=IN, jdbcType=VARCHAR},
  						#{boardVo, mode=OUT, jdbcType=CURSOR, javaType=java.sql.ResultSet, resultMap=boardMap}
  						#{uploadFile, mode=OUT, jdbcType=CURSOR, javaType=java.sql.ResultSet, resultMap=UploadFileMap}
  						)
  	}
  </select>
</mapper>